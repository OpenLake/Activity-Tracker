{
	"name": "desktop",
	"version": "1.0.0",
	"type": "module",
	"main": "main/index.js",
	"scripts": {
		"dev": "concurrently pnpm:dev:vite pnpm:dev:electron",
		"dev:vite": "vite",
		"dev:electron": "node build.js && electron .",
		"test": "vitest run",
		"test:watch": "vitest watch",
		"build": "pnpm build:vite && pnpm build:electron",
		"build:vite": "vite build",
		"build:electron": "node build.js --prod",
		"dist": "pnpm build && electron-builder",
		"pack": "pnpm build && electron-builder --dir",
		"postinstall": "electron-rebuild"
	},
	"dependencies": {
		"active-win": "^7.7.2"
	},
	"devDependencies": {
		"@emotion/react": "^11.8.2",
		"@emotion/styled": "^11.8.1",
		"@mui/icons-material": "^5.5.1",
		"@mui/lab": "^5.0.0-alpha.75",
		"@mui/material": "^5.5.3",
		"@testing-library/react": "^12.1.2",
		"@vitejs/plugin-react": "^1.3.0",
		"apexcharts": "^3.35.0",
		"auto-launch": "^5.0.5",
		"axios": "^0.26.1",
		"concurrently": "^7.1.0",
		"dayjs": "^1.11.0",
		"electron": "^18.0.1",
		"electron-builder": "^22.14.13",
		"electron-rebuild": "^3.2.7",
		"env-paths": "^3.0.0",
		"esbuild": "^0.14.31",
		"express": "^4.17.1",
		"file-icon-extractor": "^1.0.4",
		"jsdom": "^19.0.0",
		"node-machine-id": "^1.1.12",
		"react": "^17.0.2",
		"react-apexcharts": "^1.4.0",
		"react-dom": "^17.0.2",
		"react-query": "^3.34.19",
		"react-router-dom": "^6.3.0",
		"vite": "^2.9.1",
		"vitest": "^0.8.4"
	},
	"build": {
		"appId": "com.openlake.activity-tracker",
		"productName": "Activity Tracker",
		"asar": true,
		"npmRebuild": false,
		"files": [
			"main",
			"assets",
			"src/out"
		],
		"directories": {
			"buildResources": "resources"
		}
	}
}
