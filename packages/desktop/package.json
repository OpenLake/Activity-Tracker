{
	"name": "desktop",
	"version": "1.0.0",
	"type": "module",
	"main": "main/index.js",
	"scripts": {
		"dev": "concurrently pnpm:dev:vite pnpm:dev:electron",
		"dev:vite": "vite",
		"dev:electron": "node build.js && electron .",
		"build": "pnpm build:vite && pnpm build:electron",
		"build:vite": "vite build",
		"build:electron": "node build.js --prod",
		"dist": "pnpm build && electron-builder",
		"pack": "pnpm build && electron-builder --dir",
		"postinstall": "electron-rebuild"
	},
	"dependencies": {
		"active-win": "^7.6.1"
	},
	"devDependencies": {
		"@emotion/react": "^11.7.0",
		"@emotion/styled": "^11.6.0",
		"@mui/icons-material": "^5.2.1",
		"@mui/material": "^5.2.3",
		"@mui/styles": "^5.2.3",
		"@vitejs/plugin-react": "^1.1.1",
		"apexcharts": "^3.32.0",
		"auto-launch": "^5.0.5",
		"axios": "^0.24.0",
		"concurrently": "^6.3.0",
		"electron": "^16.0.4",
		"electron-builder": "^22.10.5",
		"electron-rebuild": "^3.2.5",
		"env-paths": "^3.0.0",
		"esbuild": "^0.14.2",
		"express": "^4.17.1",
		"file-icon-extractor": "^1.0.4",
		"node-machine-id": "^1.1.12",
		"react": "^17.0.2",
		"react-apexcharts": "^1.3.9",
		"react-dom": "^17.0.2",
		"react-router-dom": "^6.0.2",
		"vite": "^2.7.0"
	},
	"build": {
		"asar": true,
		"npmRebuild": false,
		"files": [
			"main",
			"src/out"
		],
		"directories": {
			"buildResources": "resources"
		}
	}
}
